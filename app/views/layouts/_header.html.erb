<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in? %>
      <% if current_user.supervisor? %>
        <%= link_to image_tag("logo.png", alt: "", class:"logo-img"), supervisor_courses_path(
                                          user_id: current_user.id) %>
        <%= link_to t(:fts_text), supervisor_courses_path(
                                          user_id: current_user.id), id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t(:home), supervisor_courses_path(
                                          user_id: current_user.id) %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t 'course' %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:add_new), new_supervisor_course_path %></li>
                <li>
                  <%= link_to t(:view_all), supervisor_courses_path %>
                </li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t 'subject' %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:add_new), new_supervisor_subject_path %></li>
                <li>
                  <%= link_to t(:view_all), supervisor_subjects_path %>
                </li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t 'trainee_text' %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:add_new), new_supervisor_user_path %></li>
                <li>
                  <%= link_to t(:view_all), supervisor_users_path(
                                          role: User::ROLE[:trainee]) %>
                </li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t 'supervisor_text' %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t(:view_all), supervisor_users_path(
                                          role: User::ROLE[:supervisor]) %>
                </li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t 'acnt' %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:profile), [:supervisor, current_user] %></li>
                <li><%= link_to t(:settings), edit_supervisor_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(:log_out), logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
      <% else %>
        <%= link_to image_tag("logo.png", alt: "", class:"logo-img"), courses_path %>
        <%= link_to t(:fts_text), courses_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t(:home), courses_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t 'trainee_text' %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t(:view_all), users_path(
                                          role: User::ROLE[:trainee]) %>
                </li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t 'report' %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:generate), new_report_path %></li>
                <li>
                  <%= link_to t(:view_all), reports_path %>
                </li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t 'acnt' %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:profile), current_user %></li>
                <li><%= link_to t(:settings), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(:log_out), logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
      <% end %>
    <% else %>
      <%= link_to image_tag("logo.png", alt: "", class:"logo-img"), root_path %>
      <%= link_to t(:fts_text), root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t(:home), root_path %></li>
          <li><%= link_to t(:log_in), login_path %></li>
        </ul>
      </nav>
    <% end %>
  </div>
</header>
